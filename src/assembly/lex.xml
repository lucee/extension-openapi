<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 
          http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    
    <id>lex</id>
    <formats>
        <format>zip</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <!-- Include the main OSGi bundle JAR -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/jars</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
        </fileSet>
        
        <!-- Include META-INF/MANIFEST.MF at root level for Lucee extension -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>META-INF/MANIFEST.MF</include>
            </includes>
        </fileSet>
        
        <!-- Include logo in META-INF directory -->
        <fileSet>
            <directory>src/images</directory>
            <outputDirectory>/META-INF</outputDirectory>
            <includes>
                <include>LOGO.png</include>
            </includes>
        </fileSet>
        
        <!-- Include function definition files -->
        <fileSet>
            <directory>src/fld</directory>
            <outputDirectory>/flds</outputDirectory>
            <includes>
                <include>*.fld</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>
    
    <!-- No separate dependencies needed - they are embedded in the main JAR -->
    
</assembly>
